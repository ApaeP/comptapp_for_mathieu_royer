<h3 class="pt-4">
  <%= t("date.month_names")[by_month.first].capitalize %> -
  <span class="text-xs"><%= money_sum(by_month.last) %></span>
</h3>

<div class="pl-1 md:pl-2 lg:pl-6">
  <table class="w-full whitespace-nowrap">
    <thead>
      <tr>
        <th style="width: 30%"></th>
        <th style="width: 30%"></th>
        <th style="width: 20%"></th>
        <th style="width: 20%"></th>
      </tr>
    </thead>
    <tbody id="invoices">
      <%= render partial: 'invoices/invoice', collection: by_month.last.sort_by(&:created_at).reverse %>
    </tbody>
  </table>
</div>
